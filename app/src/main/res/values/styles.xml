<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- TextView Barcode Number Style -->
    <style name="BarcodeNumberTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/barcode_number_text_view_layout_height</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin</item>
        <item name="android:layout_marginStart">@dimen/vertical_margin</item>
        <item name="android:layout_marginEnd">@dimen/vertical_margin</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@drawable/barcode_number_text_view_background</item>
    </style>

    <!-- EditText Barcode Information Style -->
    <style name="BarcodeInfoEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/vertical_margin</item>
        <item name="android:layout_marginStart">@dimen/vertical_margin</item>
        <item name="android:layout_marginEnd">@dimen/vertical_margin</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <!-- LinearLayout Barcode Number Style -->
    <style name="BarcodeNumberLinearLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Button Style -->
    <style name="ButtonStyle">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:padding">@dimen/vertical_margin</item>
    </style>

    <!-- GravityStarting Label Text View Styles -->
    <style name="SurveyLabelStyle">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

</resources>
